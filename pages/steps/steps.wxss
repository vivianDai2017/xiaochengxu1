/* pages/step1/step1.wxss */
@import "../lib/iconfont.wxss";
.font{
  font-family: PingFang-SC-Bold;
}
.steps{
  width: 100%;
  display: flex;
  justify-content: center;
  margin-top: 44rpx;
}
.item{
  height: 70rpx;
  display: flex;
  align-items: center;
}
.num{
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background-color: #a4a5a5;
  border-radius: 50%;
  color: #fff;
}
.line{
  /*宽度扩大了*/
  width: 50rpx;
  height: 2rpx;
  background-color: #bbb;
}
.none{
  height: 0;
}
.current{
  background-color: #68d3ff;
}
.txt{
  text-align: center;
  font-size: 28rpx;
  margin-top: 20rpx;
  color: #fff;
}
.currentTxt{
  color: #68d3ff;
}
.content{
  text-align: center;
  color: #68d3ff;
}
.step{
  height: 30rpx;
  line-height: 30rpx;
  color: #d8d8d8;
  font-size: 28rpx;
  padding: 15rpx 0;
  margin: 0 80rpx;
  text-align: left;
}
.stepTxt{
  margin-bottom: 160rpx;
}
.btn{
  width: 400rpx;
	height: 88rpx;
	border-radius: 44rpx;
	border: solid 2rpx #4cc1eb;
}

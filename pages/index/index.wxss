/**index.wxss**/
 @import "../lib/iconfont.wxss";
.container{
   color: #fff; 
}
.lockInfo{
  width: 100%;
  height: 964rpx; 
  position: relative;
  /* border: 1px solid red; */
  box-sizing: border-box;
}
/* .backgroundImage{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
} */
.dynamicInfo{
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
}
.headerNav{
  margin-top: 65rpx;
  position: relative;
  width: 100%;
  /* height: 30rpx; */
}
.lockList{
  display: flex;
  justify-content: center;
  margin: auto;
  height: 60rpx;
  line-height: 60rpx;
}
.active{
   /* font-weight: 900;  */
   font-size: 36rpx;
   font-family: PingFang-SC-Bold;
   color: #68d3ff;
}
.normal{
  font-size: 28rpx;
  font-family: PingFang-SC-Medium;
  /* color: #fff; */
}
.messNode{
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background-color: #e43a3a;
  margin-right: 30rpx;
}
.addLock{
  display: inline-block;
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
}
.date{
  font-size: 30rpx;
  font-family: PingFang-SC-Bold;
  text-align: center;
  margin-top: 78rpx;
}
.detail{
  display: flex;
  justify-content: center;
  margin-top: 550rpx;
  font-size: 30rpx;
  font-family: PingFang-SC-Bold;
}
.warn{
  color: #fb2121;
}
.messItem{
  display: flex;
  justify-content: space-around;
  font-size: 30rpx;
  font-family: PingFang-SC-Regular;
  /* font-weight: normal; */
  margin-top: 27rpx;
}
.manage{
  width: 90%;
  height: 200rpx;
  border-top: 1px solid #bbb;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  margin-top: 48rpx;
  padding: 40rpx;
}
.lock, .user{
  width: 50%;
  text-align: center;
  height: 93rpx;
  line-height: 93rpx;
}
.lock{
  border-right: 1px solid #bbb;
}

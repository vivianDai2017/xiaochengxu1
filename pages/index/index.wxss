/**index.wxss**/
 @import "../lib/iconfont.wxss";
.lockInfo{
  width: 100%;
  height: 964rpx; 
  position: relative;
  /* border: 1px solid red; */
  box-sizing: border-box;
}
/* .backgroundImage{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
} */
.dynamicInfo{
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
}
.headerNav{
  margin-top: 65rpx;
  position: relative;
  width: 100%;
  /* height: 30rpx; */
}
.lockList{
  display: flex;
  justify-content: space-between;
  height: 60rpx;
  line-height: 60rpx;
  margin: 0 120rpx;
  width: 510rpx;
  overflow: hidden;
}
.wrap{
  display: flex;
  justify-content: center;
  height: 69rpx;
}
.common{
  max-width: 158rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  text-align: right;
}
.active{
   font-size: 36rpx;
   font-family: PingFang-SC-Bold;
   color: #68d3ff;
}
.normal{
  font-size: 28rpx;
  font-family: PingFang-SC-Medium;
}
.messNode{
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background-color: #e43a3a;
  transform: translateX(-6rpx);
}
.addLock{
  display: inline-block;
  position: absolute;
  right: 46rpx;
  top: 50%;
  transform: translateY(-50%);
  border: 1rpx solid #68d3ff;
  border-radius: 50%;
  width: 42rpx;
  height: 42rpx;
  /* box-sizing: border-box; */
}
.addImg{
  width: 24rpx;
  height: 24rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}
.date{
  font-size: 30rpx;
  font-family: PingFang-SC-Bold;
  text-align: center;
  margin-top: 78rpx;
}
.lockImg{
  width: 220rpx;
  height: 457rpx;
  margin: 37rpx 206rpx 56rpx 324rpx;
}
.detail{
  display: flex;
  justify-content: center;
  /* margin-top: 550rpx; */
  font-size: 30rpx;
  font-family: PingFang-SC-Bold;
}

.warn{
  color: #fb2121;
}
.messItem{
  display: flex;
  justify-content: space-around;
  font-size: 30rpx;
  font-family: PingFang-SC-Regular;
  /* font-weight: normal; */
  margin-top: 27rpx;
}
.manage{
  width: 90%;
  height: 200rpx;
  border-top: 1px solid #bbb;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  margin-top: 48rpx;
  padding: 40rpx;
}
.lock, .user{
  width: 50%;
  text-align: center;
  height: 93rpx;
  line-height: 93rpx;
}
.lock{
  border-right: 1px solid #bbb;
}

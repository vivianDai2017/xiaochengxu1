/* pages/step1/step1.wxss */
@import "../lib/iconfont.wxss";
.header{
  padding-top: 40rpx;
  height: 80rpx;
  line-height: 80rpx;
}
.steps{
  width: 100%;
  height: 256rpx;
  display: flex;
  justify-content: space-between;
}
ul{
  height: 70rpx;
  display: flex;
  align-items: center;
}
.num{
  width: 70rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  background-color: #bbb;
  border-radius: 50%;
}
.line{
  width: 60rpx;
  height: 4rpx;
  background-color: #bbb;
}
.none{
  height: 0;
}
.current{
  background-color: #00bfff;
}
.currentTxt{
  color: #00bfff;
}
.txt{
  text-align: center;
  font-size: 32rpx;
  margin-top: 20rpx;
}
.content{
  text-align: center;
}
.icon{
  margin-bottom: 100rpx;
}
.step{
  font-size: 26rpx;
  padding: 10rpx 0;
  margin: 0 80rpx;
  text-align: left;
}
.btn{
  background-color: #00bfff;
  color: #fff;
  width: 60%;
  margin-top: 200rpx;
  border-radius: 20rpx;
}

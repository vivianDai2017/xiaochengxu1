.font{
  font-family: PingFang-SC-Bold;
}
.steps{
  width: 100%;
  /* height: 256rpx; */
  display: flex;
  justify-content: center;
  margin-top: 44rpx;
}
.item{
  height: 70rpx;
  display: flex;
  align-items: center;
}
.num{
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background-color: #a4a5a5;
  border-radius: 50%;
  color: #fff;
}
.line{
  /*宽度扩大了*/
  width: 50rpx;
  height: 2rpx;
  background-color: #bbb;
}
.none{
  height: 0;
}
.current{
  background-color: #68d3ff;
}
.txt{
  text-align: center;
  font-size: 28rpx;
  margin-top: 20rpx;
  color: #fff;
}
.currentTxt{
  color: #68d3ff;
}
.content{
  text-align: center;
  color: #68d3ff;
}
.step{
  height: 30rpx;
  line-height: 30rpx;
  color: #d8d8d8;
  font-size: 28rpx;
  padding: 15rpx 0;
  margin: 0 80rpx;
  text-align: left;
}
.stepTxt{
  margin-bottom: 160rpx;
}
.btn{
  width: 400rpx;
	height: 88rpx;
	border-radius: 44rpx;
	border: solid 2rpx #4cc1eb;
}
.loading{
  width: 142rpx;
  height: 142rpx;
  border-radius: 50%; 
  border: 10rpx solid #bbb;
  border-left: 5px solid #3cbcf1; 
  /* border-color: linear-gradient(rgba(60,188,241,1)) rgba(60,188,241,0.75) rgba(60,188,241,0.5) rgba(60,188,241,0.25); */
   /* border-top-color: linear-gradient(right, rgba(60,188,241,1) 0%, rgba(60,188,241,0.75) 100%);
  border-right-color: linear-gradient(bottom, rgba(60,188,241,0.75) 0%, rgba(255,0,0,0.5) 100%);  */
  /* border-color: linear-gradient(60deg, #3cbcf1 0%, rgba(255,255,255,0.1) 100%, rgba(255,255,255,0.15) 100%, rgba(255,255,255,0.2) 100%); */
  animation: load 3s linear infinite;  
  margin: 0 auto;
}
 @keyframes load{
  from{transform: rotate(0deg);}
  to{transform: rotate(360deg);}
}
.icon{
  margin-bottom: 160rpx;
  margin-top: 195rpx;
}       
.wait{
  color: #eee;
  font-size: 32rpx;
  font-family: pingFang-SC-Medium;
}
.wifiStep{
  font-size: 32rpx;
  font-family: PingFang-SC-Bold;
